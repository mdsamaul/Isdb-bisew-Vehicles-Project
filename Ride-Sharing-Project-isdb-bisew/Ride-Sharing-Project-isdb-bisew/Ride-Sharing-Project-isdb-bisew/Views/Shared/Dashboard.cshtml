<!-- Main Layout -->
<main style="margin-top: 58px">
    <div class="container" id="content-placeholder">
      
    </div>
</main>


<!-- Footer -->
<footer></footer>
<script type="text/javascript">

    $(document).ready(function () {
        $("#website-traffic").click(function () {
            $.ajax({
                url: '/Dashboard/WebsiteTraffic',  // Corresponding action method
                type: 'GET',
                success: function (data) {
                    $("#content-placeholder").html(data);  // Replace content in your page
                }
            });
        });

        $("#settings").click(function () {
            $.ajax({
                url: '/Dashboard/Settings',  // Corresponding action method
                type: 'GET',
                success: function (data) {
                    $("#content-placeholder").html(data);  // Replace content
                }
            });
        });

        $("#Profile").click(function () {
            $.ajax({
                url: '/Customer/Create',  // Corresponding action method
                type: 'GET',
                success: function (data) {
                    $("#content-placeholder").html(data);  // Replace content
                }
            });
        });
    });

</script>