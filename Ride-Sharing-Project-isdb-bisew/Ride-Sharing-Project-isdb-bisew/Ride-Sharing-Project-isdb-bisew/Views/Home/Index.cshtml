@{
    ViewData["Title"] = "Your Ride, Your Way";
}

<section class="container-fluid mainConteiner">
    <header class="headerConteiner container-fluid">
        <nav class="navbar navbar-expand-sm navbar-light bg-white bg-opacity-75 border-bottom box-shadow mb-3 px-3">
            <div class="container-fluid">
                <!-- Left Logo -->
                <a class="navbar-brand" href="#">
                    <img src="~/images/logo/logo.png" width="50" height="50" />
                </a>

                <!-- Toggler Button for Mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Items and Buttons -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <!-- Center Items -->
                        <li class="nav-item">
                            <a class="nav-link text-dark text-opacity-100" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark text-opacity-100" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <!-- Right Buttons (Login/Logout) -->
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item me-2">
                            <a class="btn btn-info px-5 text-opacity-100 text-white fw-bold singinbtn" href="#">Signin</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-info text-opacity-100  text-white fw-bold singupBtn" href="#">Singup</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="position-relative seliderConteiner">
        <section>
            <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active" data-bs-interval="10000">
                        <img src="@Url.Content("~/images/bg1.png")" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item" data-bs-interval="2000">
                        <img src="@Url.Content("~/images/bg1.png")" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="@Url.Content("~/images/bg1.png")" class="d-block w-100" alt="...">
                    </div>
                </div>
            </div>
        </section>

        <div class="hero-section text-center position-absolute">
            <div class="hero-body">
                <div>
                    <div class="container">
                        <div class="row mb-4">
                            <!-- Pickup Location -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="pickupLocation" class="form-label text-black fw-bold">Pickup Location</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-search"></i>
                                        </span>
                                        <input type="text" class="form-control pickup-location" id="pickupLocation" placeholder="Enter pickup location">
                                        <button class="btn btn-outline-secondary clearPickupBtn" type="button">
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!-- Dropoff Location -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="dropoffLocation" class="form-label text-black fw-bold">Dropoff Location</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-search"></i>
                                        </span>
                                        <input type="text" class="form-control dropoff-location" id="dropoffLocation" placeholder="Enter dropoff location">
                                        <button class="btn btn-outline-secondary clearDropoffBtn" type="button">
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <!-- Date Selector -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="datePicker" class="form-label text-black fw-bold">Select Date</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-calendar"></i>
                                        </span>
                                        <input type="date" class="form-control" id="datePicker" placeholder="Today">
                                    </div>
                                </div>
                            </div>

                            <!-- Time Selector -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="timePicker" class="form-label text-black fw-bold">Select Time</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-clock"></i>
                                        </span>
                                        <input type="time" class="form-control" id="timePicker" placeholder="Now">
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col text-center">
                                <a href="#" class="btn btn-primary">See Vichecle</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <section class="entyPersonContainer" style="display:none;">
        <div class="entyPersonBody">
            <div>
                <div class="cardSection">
                    <div>
                        <div class="card">
                            <img src="~/images/samaul.png" alt="Profile Image" />
                            @* <img src="https://via.placeholder.com/150" alt="Profile Image"> *@
                            <a class="cardBtn singRidebtn" asp-action="Create" asp-controller="Customer" type="button">Sign in to Ride</a>
                        </div>
                    </div>
                    <div>
                        <div class="card">
                            <img src="~/images/samaul.png" alt="Profile Image" />
                            @* <img src="https://via.placeholder.com/150" alt="Profile Image"> *@
                            <a class="cardBtn singDriverbtn" asp-action="Create" asp-controller="Driver" type="button">Sign in to Driver</a>
                        </div>
                    </div>
                    <div>
                        <div class="card">
                            <img src="~/images/samaul.png" alt="Profile Image" />
                            @* <img src="https://via.placeholder.com/150" alt="Profile Image"> *@
                            <a class="cardBtn singEmployeebtn" asp-action="Create" asp-controller="Customer" type="button">Sign in to Employee</a>
                        </div>
                    </div>
                </div>
                <div class="closeSection">
                    <button class="closeSectionBtn">X</button>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div id="modCon" style="display:none;">
            <div id="modbod" class="p-5">
                <div id="bmodal"></div>
                <div class="modal-footer mt-3">
                    <button class="btn btn-danger" type="button" id="clBtn">Close</button>
                </div>
            </div>
        </div>
    </section>

</section>

<script type="text/javascript">
    $(document).ready(()=>{
        $(".singRidebtn").click((e) => {
            e.preventDefault();
            $.ajax({
                        url: "/Customer/Create",
                        type: "post",
                        success: (response) => {
                        $("#bmodal").html(response);
                        $(".entyPersonContainer").hide();
                        $("#modCon").show();
                    },
                error: (xhr, status, error) => {
                    console.error("Error occurred:", error);
                    alert("Something went wrong! Please try again.");
                }
            });

    });

     $(".singDriverbtn").click((e) => {
            e.preventDefault();
            $.ajax({
                        url: "/Driver/Create",
                        type: "post",
                        success: (response) => {
                        $("#bmodal").html(response);
                        $(".entyPersonContainer").hide();
                        $("#modCon").show();
                    },
                error: (xhr, status, error) => {
                    console.error("Error occurred:", error);
                    alert("Something went wrong! Please try again.");
                }
            });

    });

    $(".singEmployeebtn").click((e) => {
            e.preventDefault();
            $.ajax({
                        url: "/Employee/Create",
                        type: "post",
                        success: (response) => {
                        $("#bmodal").html(response);
                        $(".entyPersonContainer").hide();
                        $("#modCon").show();
                    },
                error: (xhr, status, error) => {
                    console.error("Error occurred:", error);
                    alert("Something went wrong! Please try again.");
                }
            });

    });

                $("#clBtn").click(()=>{
                        $("#modCon").hide();
                })
     });
</script>

