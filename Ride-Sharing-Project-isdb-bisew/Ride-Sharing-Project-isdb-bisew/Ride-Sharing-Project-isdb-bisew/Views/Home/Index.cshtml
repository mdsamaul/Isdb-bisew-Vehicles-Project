@{
    ViewData["Title"] = "Your Ride, Your Way";
}

<div class="hero-section text-center">
    <h1 class="display-4">Your Ride, Your Way!</h1>
    <p class="lead">Choose your ride, your path, your rules. Travel on your terms.</p>
    <a class="btn btn-primary btn-lg" href="#book-a-ride">Book a Ride</a>
</div>

<!-- Features Section -->
<div class="container text-center my-5">
    <div class="row">
        <div class="col-md-3">
            <div class="feature-icon">
                <i class="fas fa-car"></i>
            </div>
            <h3>Book a Ride</h3>
            <p class="feature-text">Choose the vehicle that fits your need.</p>
            <a class="btn btn-info" href="#">Book Now</a>
        </div>
        <div class="col-md-3">
            <div class="feature-icon">
                <i class="fas fa-cogs"></i>
            </div>
            <h3>Your Wiks, Your Ride</h3>
            <p class="feature-text">Customize your ride experience.</p>
            <a class="btn btn-info" href="#">How It Works</a>
        </div>
        <div class="col-md-3">
            <div class="feature-icon">
                <i class="fas fa-user-tie"></i>
            </div>
            <h3>Become a Ride</h3>
            <p class="feature-text">Join our platform and become a ride partner.</p>
            <a class="btn btn-info" href="#">Join Now</a>
        </div>
        <div class="col-md-3">
            <div class="feature-icon">
                <i class="fas fa-car-side"></i>
            </div>
            <h3>Become a Driver</h3>
            <p class="feature-text">Drive and earn with us. Apply today!</p>
            <a class="btn btn-info" href="#">Start Driving</a>
        </div>
    </div>
</div>
